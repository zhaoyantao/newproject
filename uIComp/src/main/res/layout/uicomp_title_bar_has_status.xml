<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_rl_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <View
        android:id="@+id/title_top_view"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <ImageView
        android:id="@+id/title_iv_left_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title_top_view"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="#00000000"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/left_menu_dark"
        android:visibility="visible" />

    <TextView
        android:id="@+id/title_tv_left_text"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title_top_view"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:gravity="center"
        android:padding="2dp"
        android:text="left"
        android:textColor="@color/title_left_tv_color"
        android:textSize="18sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/title_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_top_view"
        android:layout_centerInParent="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:singleLine="true"
        android:text="title"
        android:textColor="@color/title_title_tv_color"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/title_iv_right_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/title_top_view"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="#00000000"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:visibility="visible" />

    <TextView
        android:id="@+id/title_tv_right_text"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/title_top_view"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:gravity="right|center_vertical"
        android:padding="2dp"
        android:text="right"
        android:textColor="@color/title_right_tv_color"
        android:textSize="17sp"
        android:visibility="visible" />

</RelativeLayout>