<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_container_mybalance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:descendantFocusability="afterDescendants"
    android:background="@color/main_grey_bg"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/uicomp_title_bar_red_bg" />

    <RelativeLayout
        android:id="@+id/rl_balance_mybalance"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/red_f3"
                android:textSize="@dimen/textsize_40" />

            <TextView
                android:id="@+id/tv_moneynum_mybalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="0.00"
                android:textColor="@color/red_f3"
                android:textSize="@dimen/textsize_40" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可提取余额"
                android:textColor="@color/black33"
                android:textSize="@dimen/textsize_12" />

            <TextView
                android:id="@+id/tv_canwithdraw_mybalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="¥0.00"
                android:textColor="@color/red_f3"
                android:textSize="@dimen/textsize_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_charge_mybalance"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/mybalance_charge_btn_bg"
                android:gravity="center"
                android:text="充值"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_15" />

            <TextView
                android:id="@+id/tv_withdraw_mybalance"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/mybalance_btn_bg"
                android:gravity="center"
                android:text="提现"
                android:textColor="@color/red_f3"
                android:textSize="@dimen/textsize_15" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e0e0e0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f2f2f2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e0e0e0" />

    <LinearLayout
        android:id="@+id/ll_mybalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_state_mybalance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_state_mybalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="状态"
                android:textColor="@color/black33"
                android:textSize="@dimen/textsize_15" />

            <ImageView
                android:id="@+id/iv_state_mybalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_state_mybalance"
                android:src="@drawable/arrow_down_gray" />

            <View
                android:layout_width="1px"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:background="#e0e0e0" />

            <View
                android:id="@+id/line_state_mybalance"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/tv_state_mybalance"
                android:layout_marginTop="10dp"
                android:background="#e0e0e0" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_date_mybalance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_date_mybalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="时间"
                android:textColor="@color/black33"
                android:textSize="@dimen/textsize_15" />

            <ImageView
                android:id="@+id/iv_date_mybalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_date_mybalance"
                android:src="@drawable/arrow_down_gray" />

            <View
                android:id="@+id/line_date_mybalance"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/tv_date_mybalance"
                android:layout_marginTop="10dp"
                android:background="#e0e0e0" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.zachary.hodge.uicomp.widget.refreshable.PullToRefreshListView
            android:id="@+id/pulltorefreshlistview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f2f2f2"
            android:divider="#f2f2f2"
            android:listSelector="#00000000" >
        </com.zachary.hodge.uicomp.widget.refreshable.PullToRefreshListView>

        <View
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>