<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rt_hair_style_item1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rt_hair_style_item2"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_hair_style_gv_item_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/tu12x" />

        <TextView
            android:id="@+id/tv_hair_style_gv_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/gray"
            android:gravity="center"
            android:text="已审核"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_12" />

        <TextView
            android:id="@+id/tv_hair_style_gv_item_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="@drawable/red"
            android:gravity="center"
            android:text="撤销"
            android:visibility="invisible"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_12" />

        <TextView
            android:id="@+id/tv_hair_style_gv_item_editor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/blue"
            android:gravity="center"
            android:text="编辑"
            android:visibility="invisible"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_12" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/rt_hair_style_item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tv_hair_style_gv_item_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="女士长发"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_16" />

        <TextView
            android:id="@+id/tv_hair_style_gv_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="价格"
            android:textColor="@color/black33"
            android:textSize="@dimen/textsize_16" />

        <TextView
            android:id="@+id/tv_hair_style_gv_item_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_hair_style_gv_item_style"
            android:layout_below="@id/tv_hair_style_gv_item_style"
            android:text="人"
            android:paddingBottom="5dp"
            android:textColor="@color/gray_d8" />
    </RelativeLayout>

</RelativeLayout>