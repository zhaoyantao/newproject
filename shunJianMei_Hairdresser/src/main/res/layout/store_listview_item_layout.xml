<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_photo_store"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/store_picture" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_name_icon_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/location_icon" />

        <TextView
            android:id="@+id/tv_name_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_name_icon_store"
            android:text="大象造型(三里屯店)"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_15" />

        <TextView
            android:id="@+id/tv_distance_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="5.1Km"
            android:textColor="@color/grey"
            android:textSize="@dimen/textsize_13" />

        <TextView
            android:id="@+id/tv_distance_text_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/tv_distance_store"
            android:text="距离:"
            android:visibility="gone"
            android:textColor="@color/grey"
            android:textSize="@dimen/textsize_13" />

        <TextView
            android:id="@+id/tv_address_text_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_store"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_name_icon_store"
            android:text=""
            android:textColor="@color/grey"
            android:textSize="@dimen/textsize_12" />

        <TextView
            android:id="@+id/tv_address_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_name_store"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tv_address_text_store"
            android:text="三里屯东街1号院"
            android:textColor="@color/grey"
            android:textSize="@dimen/textsize_12" />

        <RatingBar
            android:id="@+id/ratingbar_stroe"
            style="@style/MyCommentRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_address_store"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:isIndicator="true"
            android:numStars="5" />

        <TextView
            android:id="@+id/tv_ordernum_text_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_address_store"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/ratingbar_stroe"
            android:text="接单"
            android:textColor="@color/grey"
            android:textSize="@dimen/textsize_12" />

        <TextView
            android:id="@+id/tv_ordernum_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_address_store"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tv_ordernum_text_store"
            android:text="136次"
            android:textColor="@color/grey"
            android:textSize="@dimen/textsize_12" />

        <TextView
            android:id="@+id/tv_parking_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_address_store"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tv_ordernum_store"
            android:text="停车位7个"
            android:textColor="@color/grey"
            android:textSize="@dimen/textsize_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/ratingbar_stroe"
        android:layout_marginTop="10dp"
        android:background="#e0e0e0" />

</LinearLayout>