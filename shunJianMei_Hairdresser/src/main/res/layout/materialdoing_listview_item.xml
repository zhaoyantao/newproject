<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/materialdoing_listitem_textview_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="2015-01-01"
        android:textColor="@color/gray_ab"
        android:textSize="@dimen/textsize_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_e5" />

    <TextView
        android:id="@+id/materialdoing_listitem_textview_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="地址"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_16" />

    <TextView
        android:id="@+id/materialdoing_listitem_textview_phonenum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="电话"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_16"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_e5" />

    <LinearLayout
        android:id="@+id/materialdoing_listitem_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:scrollbars="none" >
        
        
    </LinearLayout>

    <TextView
        android:id="@+id/materialdoing_listitem_textview_ok"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/materialdoing_fragment_button_ok"
        android:clickable="true"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="8dp"
        android:text="确认完成"
        android:textColor="@color/red"
        android:textSize="@dimen/textsize_16" />

</LinearLayout>