<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/uicomp_title_bar_red_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/default_prc" />

        <TextView
            android:id="@+id/tv_opentime_text_storedetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:text="营业时间:"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_15" />

        <TextView
            android:id="@+id/tv_opentime_storedetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/tv_opentime_text_storedetail"
            android:text="10:00-22:00"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_15"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_picturenum_storedetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:text="1/8"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_15"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_name_icon_storedetail"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/location_icon" />

        <TextView
            android:id="@+id/tv_name_storedetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_name_icon_storedetail"
            android:text="大象造型(三里屯店)"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_15"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_distance_storedetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="5.1Km"
            android:textColor="@color/grey"
            android:textSize="@dimen/textsize_13"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_distance_text_storedetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/tv_distance_storedetail"
            android:text="距离:"
            android:textColor="@color/grey"
            android:textSize="@dimen/textsize_13"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_address_text_storedetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_storedetail"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_name_icon_storedetail"
            android:text="地址:"
            android:textColor="@color/grey"
            android:textSize="@dimen/textsize_12" />

        <TextView
            android:id="@+id/tv_address_storedetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_name_storedetail"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tv_address_text_storedetail"
            android:text="三里屯东街1号院"
            android:textColor="@color/grey"
            android:textSize="@dimen/textsize_12"
            android:visibility="invisible" />

        <RatingBar
            android:id="@+id/ratingbar_stroedetail"
            style="@style/MyCommentRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_address_storedetail"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/iv_name_icon_storedetail"
            android:isIndicator="true"
            android:numStars="5" />

        <TextView
            android:id="@+id/tv_ordernum_text_storedetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_address_storedetail"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/ratingbar_stroedetail"
            android:text="接单"
            android:textColor="@color/grey"
            android:textSize="@dimen/textsize_12" />

        <TextView
            android:id="@+id/tv_ordernum_storedetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_address_storedetail"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tv_ordernum_text_storedetail"
            android:text="136次"
            android:textColor="@color/grey"
            android:textSize="@dimen/textsize_12"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_parking_storedetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_address_storedetail"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tv_ordernum_storedetail"
            android:text="停车位7个"
            android:textColor="@color/grey"
            android:textSize="@dimen/textsize_12"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:id="@+id/rl_phone_storedetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_phone_icon_storedetail"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/storedetail_phone_icon" />

        <TextView
            android:id="@+id/tv_phone_text_storedetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_phone_icon_storedetail"
            android:text="电话:"
            android:textColor="@color/black33"
            android:textSize="@dimen/textsize_15" />

        <TextView
            android:id="@+id/tv_phone_storedetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/tv_phone_text_storedetail"
            android:text="010-215548584"
            android:textColor="@color/black33"
            android:textSize="@dimen/textsize_15"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="#e0e0e0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f2f2f2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_introduce_text_storedetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="简介:"
            android:textColor="@color/black33"
            android:textSize="@dimen/textsize_15" />

        <TextView
            android:id="@+id/tv_introduce_storedetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_introduce_text_storedetail"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:text="010-2155485843245235555555555555555555555555555524"
            android:textColor="@color/black33"
            android:textSize="@dimen/textsize_13"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>