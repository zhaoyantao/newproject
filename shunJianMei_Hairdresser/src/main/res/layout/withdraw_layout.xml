<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_container_mybalance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_grey_bg"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/uicomp_title_bar_red_bg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:id="@+id/rl_balance_mybalance"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="账户余额"
            android:textColor="@color/black33"
            android:textSize="@dimen/textsize_15" />

        <LinearLayout
            android:id="@+id/ll1_mybalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_moneynum_mybalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text=" "
                android:textColor="@color/red"
                android:textSize="@dimen/textsize_40" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll1_mybalance"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可提取余额"
                android:textColor="@color/black33"
                android:textSize="@dimen/textsize_12" />

            <TextView
                android:id="@+id/tv_canwithdraw_mybalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=" "
                android:textColor="@color/red"
                android:textSize="@dimen/textsize_12" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:id="@+id/rl_money_withdraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_grey_bg" >

        <TextView
            android:id="@+id/tv_money_text_withdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="提现金额:"
            android:textColor="@color/black33"
            android:textSize="@dimen/textsize_15" />

        <EditText
            android:id="@+id/et_money_withdraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="15dp"
            android:inputType="number"
            android:background="@null"
            android:hint="请输入提现金额"
            android:textColor="@color/black33"
            android:textSize="@dimen/textsize_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/tv_money_text_withdraw"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/gray_d8" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_account_withdraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_grey_bg" >

        <TextView
            android:id="@+id/tv_account_text_withdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="银行卡账户:"
            android:textColor="@color/black33"
            android:textSize="@dimen/textsize_16" />

        <EditText
            android:id="@+id/et_account_withdraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:hint="请输入银行卡号"
            android:textColor="@color/black33"
            android:textSize="@dimen/textsize_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/tv_account_text_withdraw"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/gray_d8" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_name_withdraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_grey_bg" >

        <TextView
            android:id="@+id/tv_name_text_withdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="银行卡户名:"
            android:textColor="@color/black33"
            android:textSize="@dimen/textsize_16" />

        <EditText
            android:id="@+id/et_name_withdraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:hint="请输入银行户名"
            android:textColor="@color/black33"
            android:textSize="@dimen/textsize_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/tv_name_text_withdraw"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/gray_d8" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bank_withdraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_grey_bg" >

        <TextView
            android:id="@+id/tv_bank_text_withdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="开户行:"
            android:textColor="@color/black33"
            android:textSize="@dimen/textsize_16" />

        <EditText
            android:id="@+id/et_bank_withdraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:hint="请输入开户行"
            android:textColor="@color/black33"
            android:textSize="@dimen/textsize_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/tv_bank_text_withdraw"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/gray_d8" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_red"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_16" />

</LinearLayout>